@model List<PhoneBook.Core.Entities.Contact>

@if (Model == null || !Model.Any())
{
    <p>هیچ نتیجه‌ای برای نمایش موجود نیست.</p>
}
else
{
    <table class="contact-table">
        <thead>
            <tr>
                <th style="width: 10%;">شناسه</th>
                <th style="width: 20%;">نام</th>
                <th style="width: 20%;">نام خانوادگی</th>
                <th style="width: 20%;">شماره تماس</th>
                <th style="width: 30%;">آدرس</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.Address</td>
                </tr>
            }
        </tbody>
    </table>
}